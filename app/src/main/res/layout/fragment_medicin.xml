<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Medicin"
    android:id="@+id/Med">

    <EditText
        android:id="@+id/Medi_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Med_id"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Med_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Med_Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Medi_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Medi_id"
        app:layout_constraintTop_toBottomOf="@+id/Medi_id" />

    <EditText
        android:id="@+id/Med_Company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Med_Company"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Med_Name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Med_Name"
        app:layout_constraintTop_toBottomOf="@+id/Med_Name" />

    <EditText
        android:id="@+id/Med_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Med_type"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Med_Company"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Med_Company"
        app:layout_constraintTop_toBottomOf="@+id/Med_Company" />

    <EditText
        android:id="@+id/Med_Tsock_Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Med_Stock_Count"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/Med_type"
        app:layout_constraintTop_toBottomOf="@+id/Med_type" />

    <Button
        android:id="@+id/MedAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="MedAdd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Med_Tsock_Count"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/Med_Tsock_Count"
        app:layout_constraintTop_toBottomOf="@+id/Med_Tsock_Count"
        app:layout_constraintVertical_bias="0.015" />
</androidx.constraintlayout.widget.ConstraintLayout>