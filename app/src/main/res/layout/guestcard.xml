<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guestcard">

    <RelativeLayout
        android:id="@+id/Maincard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:id="@+id/Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/Card"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="1dp"
                    android:layout_toEndOf="@+id/dp"
                    android:text="Id:-"
                    android:textColor="@color/black"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Id"
                    android:layout_alignStart="@+id/Id"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:text="Name:-"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fetchedId"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="179dp"
                    android:layout_toEndOf="@+id/Id"
                    android:hint="FId"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fetchedName"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fetchedId"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/Name"
                    android:hint="FName"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/Update"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/fetchedId"
                    android:layout_marginStart="58dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/fetchedName"
                    android:text="Update"
                    android:textSize="5dp" />

                <Button
                    android:id="@+id/Delete"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/Update"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/fetchedName"
                    android:text="Delete"
                    android:textSize="5dp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>